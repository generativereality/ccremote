{
  "name": "ccremote",
  "version": "0.1.0",
  "description": "Remote Claude Code control with auto-continuation and Discord approvals",
  "type": "module",
  "bin": {
    "ccremote": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsdown src/cli.ts --format esm",
    "dev": "tsx src/cli.ts",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "postpack": "rm -rf dist"
  },
  "keywords": ["claude", "claude-code", "automation", "discord", "remote"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "eslint": "^8.56.0",
    "tsdown": "^0.2.13",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}